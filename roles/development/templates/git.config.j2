{% if git_name or git_email %}

[user]
	{%if git_name %}
	name = {{ git_name }}
	{% endif %}

	{% if git_email %}
	email = {{ git_email }}
	{% endif %}

{% endif %}

[color]
	ui = auto
[color "branch"]
	current = yellow reverse  
	local = yellow  
	remote = green  
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold  
[color "status"]
	added = green
	changed = red
	untracked = red bold

[alias]
	a = add
	br = branch
	co = checkout
	ct = commit
	d = diff
	dc = diff --cached
	st = status